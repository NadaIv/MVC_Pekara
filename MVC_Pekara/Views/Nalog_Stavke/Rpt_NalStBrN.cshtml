@model MVC_Pekara.NalogProizvodnje
@using ReportViewerForMvc;

@{
    ViewBag.Title = "Nalog";
}
<h2>Report</h2>

<h4>Unesi broj naloga:</h4>

@using (Html.BeginForm())
{
    <input type="text" name="brojNaloga" />
    <input type="submit" value="Posalji" />
}

@Html.ReportViewer(ViewBag.ReportViewer as Microsoft.Reporting.WebForms.ReportViewer)

<style>
    iframe {
        width: 100%;
        height: 500px;
        border: none;
        overflow-y: auto;
        overflow-x: auto;
    }
</style>
